{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=localhost;Database=LogTest;Integrated Security=SSPI;",
          "sinkOptionsSection": {
            "tableName": "LogEvents",
            "autoCreateSqlTable": true
          },
          "restrictedToMinimumLevel": "Information",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "timeStamp": {
              "columnName": "Timestamp",
              "convertToUtc": false
            },
            "additionalColumns": [
              {
                "columnName": "AdditionalColumn1",
                "propertyName": "CustomProperty1",
                "dataType": "12"
              }
            ]
          },
          "logEventFormatter": "WorkerServiceDemo.CustomLogEventFormatter::Formatter, WorkerServiceDemo"
        }
      }
    ],
    "AuditTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=localhost;Database=LogTest;Integrated Security=SSPI;",
          "restrictedToMinimumLevel": "Information",
          "logEventFormatter": "WorkerServiceDemo.CustomLogEventFormatter::Formatter, WorkerServiceDemo",
          "sinkOptionsSection": {
            "tableName": "LogEventsAudit",
            "autoCreateSqlTable": true
          },
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "timeStamp": {
              "columnName": "Timestamp",
              "convertToUtc": false
            },
            "additionalColumns": [
              {
                "columnName": "AdditionalColumn1",
                "propertyName": "CustomProperty1",
                "dataType": "12"
              }
            ]
          }
        }
      }
    ]
  }
}
